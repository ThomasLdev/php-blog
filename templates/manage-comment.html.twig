{% extends "base-admin.html.twig" %}

{% block content %}
    <div class="container-fluid">

        <div class="row justify-content-center align-items-center p-2 d-lg-flex d-md-none">
            <div class="col-lg-3 text-center">
                <p>Date Cr√©ation</p>
            </div>
            <div class="col-lg-3 text-center">
                <p>Contenu</p>
            </div>
            <div class="col-lg-3 text-center">
                <p>Auteur</p>
            </div>
            <div class="col-lg-3 text-center">
                <p>Action</p>
            </div>
        </div>

        <div class="row d-lg-flex d-md-none d-sm-none">
            <div class="col-12">
                <hr />
            </div>
        </div>

        {% for comment in allComments %}
            <div class="row justify-content-center align-items-center p-2">
                <div class="col-lg-3 text-center">
                    {{ comment.created_at|date("d/m/Y") }}
                </div>
                <div class="col-lg-3 text-center">
                    {{ comment.content }}
                </div>
                <div class="col-lg-3 text-center">
                    {{ comment.comment_author }}
                </div>
                <div class="col-lg-3 text-center">
                    <div class="row text-center justify-content-center align-items-center p-2">
                        <a class="btn btn-primary" href="../public/index.php?action=validateComment&amp;id={{ comment.id }}"><i class="far fa-thumbs-up"></i></a>
                    </div>
                    <div class="row text-center justify-content-center align-items-center p-2">
                        <a href="../public/index.php?action=deleteComment&amp;id={{ comment.id }}" onclick="return confirm('Voulez-vous vraiment supprimer ce commentaire ?')" class="btn btn-danger"><i class="far fa-thumbs-down"></i></a>
                    </div>
                </div>
            </div>
            <hr />
        {% endfor %}
    </div>
{% endblock %}