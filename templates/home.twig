<div class="container">
    {%for post in posts%}

        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-preview">
                    <a href="../public/index.php?action=showPost&amp;id={{ post.id }}">
                        <h2 class="post-title">
                            {{ post.title }}
                        </h2>
                    </a>
                    <p>
                        {{ post.content }}...
                        <a href="../public/index.php?action=showPost&amp;id={{ post.id }}">En lire plus</a>
                    </p>
                    <p class="post-meta">Publi√© par
                        <a href="#">{{ post.author }}</a>
                        le <em> {# post.created_at #} </em></p>
                </div>
            </div>
        </div>

    {% endfor %}
</div>




